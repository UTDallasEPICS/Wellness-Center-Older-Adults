generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  firstName String
  lastName  String
  phone     String @unique

  @@unique([id, firstName, lastName])
}

model Customer {
  customerEmail String    @unique
  firstName     String
  middleName    String?
  lastName      String
  streetAddress String
  city          String
  state         String?
  birthdate     DateTime?
  customerPhone String
  customerID    Int       @id @default(autoincrement())
  zipcode       String
  rides         Ride[]    @relation("CustomerRides")

  @@unique([customerID, firstName, lastName])
}

model Volunteer {
  volunteerID    Int       @id @default(autoincrement())
  volunteerEmail String    @unique
  firstName      String
  middleName     String?
  lastName       String
  streetAddress  String
  city           String
  state          String?
  zipcode        String
  birthdate      DateTime?
  volunteerPhone String
  rides          Ride[]    @relation("VolunteerRides")

  @@unique([volunteerID, firstName, lastName])
}

model Ride {
  customerID    Int
  time          DateTime  @db.Time(4)
  startLocation String
  date          DateTime  @db.Date
  endLocation   String
  rideID        Int       @id @default(autoincrement())
  volunteerID   Int
  customer      Customer  @relation("CustomerRides", fields: [customerID], references: [customerID], onDelete: Cascade)
  volunteer     Volunteer @relation("VolunteerRides", fields: [volunteerID], references: [volunteerID], onDelete: Cascade)

  @@unique([customerID, volunteerID])
}
